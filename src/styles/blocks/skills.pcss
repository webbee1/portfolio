section.skills-section{
  background: url('../images/content/bg/bg_3.jpg')  no-repeat;
  background-size:cover;
  background-position:center center;
  position:relative;
  display:flex;
  flex-direction:row;
  min-height:650px;
  @include tablets{
    padding-bottom:300px;
  }
  
}
.skills-container{
  position:relative;
  padding:3% 0 0 0;
  display:flex;
  flex-direction:column;
  margin-bottom:3%;

  &:before{
    content:"";
    display:block;
    position:absolute;
    background: url("../images/content/hands.png") left bottom no-repeat;
    background-size:contain;
    height:80%;
    width:70%;
    left:-15%;
    bottom:-20%;
    @include tablets{
      width:50%;

      transform: rotate(-90deg) translateY(-30%);
      left: 40%;
    bottom: -55%
    }
  }
}

.skill {
  position: relative;
  width: 150px;
  height: 150px;

  @include tablets {
    width: 140px;
    height: 140px;
  }
}

.skill__circle-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size:16px;
  font-weight:700;
  color:$half-white;
  padding: 4px;
  

  @include tablets {
    font-size: 16px;
  padding:2px;
  white-space:wrap;
  }
}

.skills-row__title {
  font-size:30px;
  font-weight:600;
  padding:1% 0;
  text-align:left;
  color:$text-color;
  @include tablets {
    font-size:18px;
    line-height:2.67;
    text-align:center;
    padding:2% 0;
}
}

.skills-row__list {
  display:flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
  justify-content:space-around;
  flex-wrap:wrap;
  padding-bottom:60px;
  @include tablets {
    margin:auto;
    flex-wrap:nowrap;
  }
}

.skills-row__item {
  margin-left: 4%;
}

.skills__right{
  display:flex;
  z-index:5;
  justify-content:flex-end;
  padding:2% 0;
  width:85%;
  @include tablets {
    width:90%;
   justify-content:center;
   margin:auto;
  padding:0;
}
}

 .skills__right-desc{
  padding:0 1%;
  width:65%;
  
  @include tablets {
    width:100%;
}
  @include phones {
    width:100%;
}
} 

.skills__box{
  width: 45%;
  margin: 0 auto;
  padding:6% 0 3% ;
  @include tablets {
    width:80%;
}
}

.skills__info{
  margin:0 auto;
  line-height: 1.8;
  color:$half-white;
  @include tablets {
    width:95%;
    text-align:center;
}
}