section.feedback-section{
  flex-direction:column;
  background: url('../images/content/bg/bg_footer.jpg')50% no-repeat;
  background-size:cover;
  font-weight:500;
  flex-direction: column;
  min-height:150vh;
  position:relative;
  padding:8% 0;
}

.container.feedback-container{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    @include tablets{
      padding:0 2%;
    }
    @include phones{
    width:90%;
  }
}

.feedback__about{
    @include tablets{
      width: 80%;
      margin:auto;
      padding:3% 0%;
     @include phones{
       width:90%;
       
     } 
    }
}
.feedback__decor-right{
  background-image:url("../images/content/leafage.png");
  background-size:contain;
  position:absolute;
  right:-74%;
  top:-15%;
  width:100%;
  height:100%;
}

.feedback__section-title{
  font-weight:700;
  font-size:36px;
  margin-right:70px;
}

.feedback__top{
display:inline-flex;
vertical-align:middle;align-items:Center;
flex-wrap:nowrap;
width:41%;
justify-content:space-between;
margin-bottom:6%;

@include phones{
    display:flex;
    dlex-direction:column;
    font-size:30px;
    white-space:nowrap; 
  }
  @include phones{
    flex-wrap:wrap;
  }
}

.feedback__button{
  display:inline-flex;
  flex-direction: row;
  align-self: center;
  height:50px;
  @include phones{
    margin:auto;
  }
}

button.feedback__btn{
  width:50px;
  height:50px;
  background-color:transparent;
  border:1px solid #fff;
  position:relative;
  border-radius:100%;
  margin-right:30px;
  outline:none;
  &:hover{
    background:$main-color;
    border:none;
    transition:.5s;
  }
    &:last-child{
      margin-right:0;
     
    }
}

.feedback__btn-icon {
  content:'';
  width:8px;
  height:10px;
  position:absolute;
  top:50%;
  left:50%;
  display:block;
  cursor:pointer;
  transform:translate(-50%, -50%);
  fill:#fff;

}
.feedback__comment{
  overflow:hidden;
width:74%;
padding-bottom:14%;
  
     @include phones {
margin-bottom:50;
  }
}
.feedback__comment-list{
  display:flex;
  align-items:flex-start;
  will-change: transform;
  transition: transform .8s;
  @include tablets {
    margin-left: 0;
  }
  @include phones {
    width: 100%;
    margin-left: 0;
  }
}

.feedback__comment-item{
  flex-shrink: 0;
  padding-right: 30px;
  width: 50%;

  @include phones {
    margin-right: 0;
    width: 100%;
  }
  &:last-child {
    margin-right: 0;
  }

}

.feedback__btn.feedback__btn_prew{
  transform: rotate(180deg); 
}

.person__name{
  font-size:18px;
  line-height:48px;
  font-weight:600;
}

.person__post{
  font-size:16px;
  color:$icon-color;
}