section.works-section{
  background-color:$text-color;
  margin-bottom:5%;
}

.works__container{
    margin-bottom: 11%;
    padding-top: 10%;

  @include tablets{
    padding:0 2%;
  }
}
.works__section-title{
  color:$footer-color;
  font-size:36px;
  font-weight:700;
  margin-bottom:6%;
}

.works__slider__pics {
  position: relative;
  width:100%;
 
}
.work__slider{
      width: 100%;
      height:100%;
}

.works-slider__pics-content::before {
  position: absolute;
  content: attr(data-slide);
  right: -12%;
  top: 40%;
  color: $light-grey;
  font-size: 400px;
  font-weight: 800;
  line-height: 48px;
  z-index: -1;

  @include tablets {
    top: 27%;
  }
}

.works-slider__fuulpic-container {
  position: relative;
  margin-right: 8%;
  @include tablets{
    margin-bottom:50px;
  }
  
  @include phones {
    margin: 0 -10%;
  }
}
.works-slider__pics-content{
  height: 34.375rem;
  width:90%;
  position:relative;
}
.works-slider__buttons {
    display: flex;
    flex-direction:column;
    position: absolute;
    top: 71%;
    transform: translate(98%);
    right: 0%;
    justify-content: center;
  
  @include phones {
   top: 70%;
  right: 6%;
  }
}

.works-slider__btn {
  width: 49px;
  height: 49px;
  background-color: $dark-grey;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  &_prev {
    transform: rotate(180deg);
  }
  &_next {
    transform: rotate(0deg);
  }
  
}

.works-slider__btn-icon {
  width: 15;
  height: 10px;
  fill:$text-color;
  &:hover{
    fill:$icon-color;
  }
}

.works-slider__thumbs {
  position: absolute;
  bottom:12%;
  right: 0;
  transform:translate(0%);
  width: 70%;
  display:inline-flex;
  flex-direction:row;
  justify-content:flex-end;
  align-items:flex-end;

  @include tablets{
    width:85%;
    bottom:45px;
  }
    @include phones {
    display: none;
  }
}
.works-slider__thumb_item{
  margin-right:2px;
  outline:2px solid transparent;
  
}


.preview__thumb_active,
.works-slider__thumb_item.active{

  &:hover {
  outline:2px solid $main-color;
  }
}

  
.preview__thumb_active, 
.works-slider__thumb_item:hover{
  outline:2px solid $main-color;
  
}
  
.works-slider__btn:hover{
  background:$main-color;
}
