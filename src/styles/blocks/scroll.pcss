.scroll{
  display: flex;
  justify-content: center;
  align-items:center;
  padding: 0 0 3% 0;
  @include tablets {
    display: none;
  }
}

.scroll__text{
  font-size: 18px;
  font-weight: 600;
  cursor:pointer;
  margin-right:10px;
  z-index:100;
}

.scroll__icon{
  width:30px;
  height:30px;
  fill:#fff;
   z-index:100;   
  
}