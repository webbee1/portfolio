.circle {
  fill: transparent;
  
}

.circle__under {
  stroke:$grey;
  stroke-width: 3px;
}

.circle__above {
  stroke-width: 6px;
  stroke-dasharray: 251;
  stroke-dashoffset: 251;
  animation:fill 100s linear infinite;
  animation-play-state:paused;
  animation-delay:.3s; 
}

@keyframes fill {
  from {
    stroke-dashoffset:251;
  }
  to{
    stroke-dashoffset:0;
  }
}

